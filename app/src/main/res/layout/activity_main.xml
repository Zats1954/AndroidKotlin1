<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/leftIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@sample/posts.json/data/authorAvatar" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#FF000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPublished"
        app:layout_constraintEnd_toStartOf="@+id/ivMenu"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivAvatar"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@sample/posts.json/data/author" />

    <TextView
        android:id="@+id/tvPublished"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
        app:layout_constraintEnd_toEndOf="@+id/tvAuthor"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
        tools:srcCompat="@sample/posts.json/data/published"
        tools:text="@sample/posts.json/data/published" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/menuIcon"
        app:layout_constraintBottom_toBottomOf="@+id/tvPublished"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/tvAuthor"
        app:layout_constraintTop_toTopOf="@+id/tvAuthor"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivAvatar,tvPublished,ivMenu"
        />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin ="@dimen/common_spacing"
        android:autoLink="web"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@sample/posts.json/data/content"
         />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier1"
        android:foreground="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvContent"
        />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/menuIcon"
        android:src="@drawable/ic_heart"
        app:layout_constraintTop_toBottomOf="@+id/barrier1"
        app:layout_constraintStart_toStartOf="@+id/barrier1"
         />

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#FFFFFF"
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="@+id/ivLike"
        app:layout_constraintStart_toEndOf="@+id/ivLike"
        app:layout_constraintTop_toTopOf="@+id/ivLike"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@sample/posts.json/data/published"
        tools:text="@sample/posts.json/data/likes" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:contentDescription="@string/menuIcon"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintBottom_toBottomOf="@+id/ivLike"
        app:layout_constraintStart_toEndOf="@+id/tvLikes"
        app:layout_constraintTop_toTopOf="@+id/ivLike" />

    <TextView
        android:id="@+id/tvShares"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="#FFFFFF"
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="@+id/tvLikes"
        app:layout_constraintStart_toEndOf="@+id/ivShare"
        app:layout_constraintTop_toTopOf="@+id/tvLikes"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@sample/posts.json/data/published"
        tools:text="@sample/posts.json/data/shares" />

    <ImageView
        android:id="@+id/ivVisible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/menuIcon"
        android:src="@drawable/ic_baseline_visibility_24"
        app:layout_constraintBottom_toBottomOf="@+id/ivLike"
        app:layout_constraintEnd_toStartOf="@+id/tvVisibles"
        app:layout_constraintTop_toTopOf="@+id/ivLike" />

    <TextView
        android:id="@+id/tvVisibles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:background="#FFFFFF"
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="@+id/tvLikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLikes"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@sample/posts.json/data/published"
        tools:text="@sample/posts.json/data/visibles" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvShares,ivVisible,tvVisibles"
        />

</androidx.constraintlayout.widget.ConstraintLayout>